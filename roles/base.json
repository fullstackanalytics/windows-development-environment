{
    "name": "base",
    "chef_type": "role",
    "json_class": "Chef::Role",
    "description": "base role: sets up basic development tools and languages",
    "run_list": [
        "recipe[apt]",
        "recipe[build-essential]",
        "recipe[ntp]",
        "recipe[git]",
        "recipe[rvm::user]",
        "recipe[java]",
        "recipe[scala]",
        "recipe[simple-scala-sbt]",
        "recipe[anaconda]",
        "recipe[anaconda::shell_conveniences]",
        "recipe[anaconda_wrapper::default]",
        "recipe[dotfiles]"
    ],
    "default_attributes": {
        "rvm": {
            "ubuntu": {
            "rubies": ["stable"]
            }
        },
        "ubuntu": {
            "system_chef_solo" : "/opt/chef/bin/chef-solo"
        },
        "dotfiles": {
            "users":  [
            {
                "user_name": "ubuntu",
                "git_url": "https://github.com/namabile/dotfiles.git",
                "files_to_use": [".tmux.conf", ".vimrc", ".gitconfig", ".bashrc", "git/git-prompt.sh", "git/git-completion.bash"]
            }
            ]
        },
        "anaconda": {
            "owner": "ubuntu",
            "group": "ubuntu",
            "flavor": "x86_64",
            "accept_license": "yes"
        },
        "java": {
            "install_flavor": "oracle",
            "jdk_version": "8",
            "oracle": {
                "accept_oracle_download_terms": true
            }
        },
        "scala": {
            "version": "2.11.6",
            "checksum": "41ba45e4600404634217a66d6b2c960459d3a67e0344a7c3d9642d0eaa446583"
        }
    }
}
